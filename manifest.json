{
  "manifest_version": 3,
  "name": "n9n AI Copilot",
  "version": "1.0.4",
  "description": "AI-powered workflow copilot for n8n - build workflows through natural language conversations",
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "scripting"
  ],
  "host_permissions": [
    "*://*.n8n.cloud/*",
    "*://localhost:*/*",
    "*://127.0.0.1:*/*",
    "*://100.78.164.43:*/*",
    "*://*.supabase.co/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.n8n.cloud/*",
        "*://localhost:*/*",
        "*://127.0.0.1:*/*",
        "*://100.78.164.43:*/*"
      ],
      "js": [
        "modules/Utils.js",
        "modules/AuthManager.js",
        "modules/ChatManager.js",
        "modules/UIManager.js",
        "src/services/ChatService.js",
        "src/services/UIService.js",
        "content-script-consolidated.js"
      ],
      "css": ["content-styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "assets/void.png",
    "32": "assets/void.png",
    "48": "assets/void.png",
    "128": "assets/void.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/void.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "components/popup/popup.html",
    "default_title": "n9n AI Copilot",
    "default_icon": {
      "16": "assets/void.png",
      "32": "assets/void.png",
      "48": "assets/void.png",
      "128": "assets/void.png"
    }
  }
}